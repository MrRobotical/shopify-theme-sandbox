<style>
  #bundles-form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .bundle-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20px;
  }
  .bundle-group img {
    max-width: 150px;
    margin-bottom: 10px;
  }
  .bundle-group label {
    margin-bottom: 5px;
  }
  #submit-button {
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    cursor: pointer;
  }
</style>

<form id="bundles-form">
  <div class="bundle-group">
    {% for product in collections.all.products %}
      {% if product.tags contains "bundle1" %}
        <img src="{{ product.featured_image | img_url: '300x300' }}" alt="{{ product.title }}">
        <label for="group-1">Group 1</label>
        <select id="group-1" name="group-1">
          {% assign variant = product.selected_or_first_available_variant %}
          <option value="{{ variant.id }}">{{ product.title }} - {{ variant.price | money }}</option>
        </select>
      {% endif %}
    {% endfor %}
  </div>

  <div class="bundle-group">
    {% for product in collections.all.products %}
      {% if product.tags contains "bundle2" %}
        <img src="{{ product.featured_image | img_url: '300x300' }}" alt="{{ product.title }}">
        <label for="group-2">Group 2</label>
        <select id="group-2" name="group-2">
          {% assign variant = product.selected_or_first_available_variant %}
          <option value="{{ variant.id }}">{{ product.title }} - {{ variant.price | money }}</option>
        </select>
      {% endif %}
    {% endfor %}
  </div>

  <button id="submit-button">Submit</button>
</form>

<script>
const form = document.getElementById("bundles-form");

form.addEventListener("submit", async (e) => {
  e.preventDefault();
  
  const group1 = document.getElementById("group-1").value;
  const group2 = document.getElementById("group-2").value;

  const bundleId = new Date().getTime();

  await fetch("/cart/add.js", {
    method: "POST",
    headers: {
      "Content-Type": "application/json"
    },
    body: JSON.stringify({
      items: [
        {
          id: group1,
          quantity: 1,
          properties: {
            _bundleId: bundleId
          }
        },
        {
          id: group2,
          quantity: 1,
          properties: {
            _bundleId: bundleId
          }
        }
      ]
    })
  });

  window.location.reload();
});
</script>

