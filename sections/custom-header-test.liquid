<style>
  .custom-header-{{ section.id }} {
    background: #333; /* Charcoal background */
    width: 100%;
    z-index: 1000;
    color: #fff; /* White text and elements */
    padding: 0 20px;
  }
  .sticky-header-{{ section.id }} {
    position: sticky;
    top: 0;
  }
  .header-container-{{ section.id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10px 0;
  }
  .top-header-{{ section.id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1200px;
  }
  .logo-{{ section.id }} img {
    max-height: 50px;
  }
  .nav-menu-{{ section.id }} {
    display: flex;
    justify-content: space-between;
    width: 100%;
    margin-top: 10px;
    max-width: 1200px;
  }
  .menu-{{ section.id }} {
    list-style: none;
    display: flex;
    justify-content: space-between;
    width: 100%;
    margin: 0;
    padding: 0;
  }
  .menu-item-{{ section.id }} {
    margin: 0 20px;
  }
  .menu-item-{{ section.id }} a {
    text-decoration: none;
    color: #fff;
  }
  .header-icons-{{ section.id }} {
    display: flex;
    align-items: center;
  }
  .header-icon-{{ section.id }} {
    margin-left: 15px;
  }
  .header-icon-{{ section.id }} svg {
    width: 20px;
    height: 20px;
    fill: #fff;
  }
  .search-bar-{{ section.id }} {
    flex-grow: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 20px;
    max-width: 600px;
  }
  .search-bar-{{ section.id }} input[type="text"] {
    width: 100%;
    padding: 8px 12px;
    border: none;
    border-radius: 20px;
    font-size: 14px;
  }
  .search-bar-{{ section.id }} button {
    background: #ff6600;
    border: none;
    padding: 8px 12px;
    border-radius: 20px;
    cursor: pointer;
    margin-left: -40px;
    position: relative;
    left: -15px;
  }
  .search-bar-{{ section.id }} button svg {
    fill: #fff;
  }
</style>

<div class="custom-header-{{ section.id }}{% if section.settings.sticky_header %} sticky-header-{{ section.id }}{% endif %}">
  <div class="header-container-{{ section.id }}">
    <div class="top-header-{{ section.id }}">
      {% if section.settings.logo != blank %}
        <div class="logo-{{ section.id }}">
          <a href="{{ shop.url }}">
            <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}">
          </a>
        </div>
      {% else %}
        <p>No logo selected</p>
      {% endif %}
      
      <div class="search-bar-{{ section.id }}">
        <input type="text" placeholder="Find your products here">
        <button type="submit">
          <svg class="icon icon-search" viewBox="0 0 20 20" fill="currentColor">
            <path d="M17.545 15.684l-3.486-3.486a7.5 7.5 0 10-1.061 1.061l3.486 3.486a.75.75 0 001.061-1.061zm-7.293-2.83a5.5 5.5 0 110-11 5.5 5.5 0 010 11z"/>
          </svg>
        </button>
      </div>
      
      <div class="header-icons-{{ section.id }}">
        <div class="header-icon-{{ section.id }}">
          <a href="/locale" title="Change Language">
            <svg class="icon icon-globe" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2 5v2h3.61a7.97 7.97 0 01-1.9 4.56c.68.67 1.53 1.19 2.48 1.5A9.98 9.98 0 002 5zm0-2a10.02 10.02 0 0112 0 9.98 9.98 0 016 8.06c0 1.22-.23 2.39-.65 3.45l-2.83-2.83A7.97 7.97 0 0014.39 7H18V5H2zm15.1 11.9l-1.06 1.06c.53.53.53 1.39 0 1.92l-1.06 1.06a1.353 1.353 0 01-1.92 0l-1.06-1.06a1.353 1.353 0 010-1.92l1.06-1.06a1.353 1.353 0 011.92 0l1.06 1.06c.53.53 1.39.53 1.92 0z"/>
            </svg>
          </a>
        </div>
        <div class="header-icon-{{ section.id }}">
          <a href="/account" title="Login">
            <svg class="icon icon-user" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10 10c2.21 0 4-1.79 4-4S12.21 2 10 2 6 3.79 6 6s1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
            </svg>
          </a>
        </div>
        <div class="header-icon-{{ section.id }}">
          <a href="/cart" title="Cart">
            <svg class="icon icon-cart" viewBox="0 0 20 20" fill="currentColor">
              <path d="M16 6a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2V8a2 2 0 012-2h2a2 2 0 100-4h2a2 2 0 100 4h6a2 2 0 100-4h2a2 2 0 100 4h2zm-4 8a2 2 0 100-4 2 2 0 000 4zm-8 0a2 2 0 100-4 2 2 0 000 4z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <nav class="nav-menu-{{ section.id }}">
      {% assign menu_handle = section.settings.menu %}
      {% if menu_handle %}
        <ul class="menu-{{ section.id }}">
          {% for link in linklists[menu_handle].links %}
            <li class="menu-item-{{ section.id }}">
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      {% else %}
        <p>No menu selected</p>
      {% endif %}
    </nav>
  </div>
</div>

{% schema %}
{
  "name": "Custom Header 11",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "checkbox",
      "id": "sticky_header",
      "label": "Enable Sticky Header",
      "default": true
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Select menu"
    }
  ],
  "presets": [
    {
      "name": "Custom Header 11",
      "category": "Header"
    }
  ]
}
{% endschema %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const header = document.querySelector('.custom-header-{{ section.id }}');
    if (header.classList.contains('sticky-header-{{ section.id }}')) {
      window.addEventListener('scroll', function() {
        if (window.scrollY > 0) {
          header.classList.add('scrolled');
        } else {
          header.classList.remove('scrolled');
        }
      });
    }
  });
</script>



    