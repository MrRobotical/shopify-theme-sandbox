{% schema %}
{
  "name": "Custom Header Test 20",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "checkbox",
      "id": "sticky_header",
      "label": "Enable Sticky Header",
      "default": true
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Select menu"
    }
  ],
  "presets": [
    {
      "name": "Custom Header Test 20",
      "category": "Header"
    }
  ]
}
{% endschema %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const header = document.querySelector('.custom-header-{{ section.id }}');
    if (header.classList.contains('sticky-header-{{ section.id }}')) {
      window.addEventListener('scroll', function() {
        if (window.scrollY > 0) {
          header.classList.add('scrolled');
        } else {
          header.classList.remove('scrolled');
        }
      });
    }
  });
</script>
