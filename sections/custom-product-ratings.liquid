<div class="product-reviews">
      <h2>{{ section.settings.title }}</h2>
      {% for block in section.blocks %}
        <div class="review-block">
          <h3>{{ block.settings.customer_name }}</h3>
          <div class="rating" data-rating="{{ block.settings.rating }}"></div>
          <p>{{ block.settings.comment }}</p>
        </div>
      {% endfor %}
    </div>



{% schema %}
    {
      "name": "Product Reviews",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Section Title",
          "default": "Customer Reviews"
        }
      ],
      "blocks": [
        {
          "type": "review",
          "name": "Review",
          "settings": [
            {
              "type": "text",
              "id": "customer_name",
              "label": "Customer Name",
              "default": "John Doe"
            },
            {
              "type": "range",
              "id": "rating",
              "label": "Rating",
              "default": 5,
              "min": 1,
              "max": 5,
              "step": 1
            },
            {
              "type": "textarea",
              "id": "comment",
              "label": "Comment",
              "default": "This product is amazing!"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Product Reviews",
          "category": "Product"
        }
      ]
    }
    {% endschema %}
    
    
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.rating').forEach(function(ratingElement) {
          const rating = ratingElement.getAttribute('data-rating');
          ratingElement.innerHTML = '★'.repeat(rating) + '☆'.repeat(5 - rating);
        });
      });
    </script>
    
    <style>
      .product-reviews {
        margin: 20px 0;
      }
      .review-block {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 10px;
      }
      .review-block h3 {
        margin: 0 0 5px;
      }
      .rating {
        font-size: 20px;
        color: #f39c12;
      }
    </style>
    